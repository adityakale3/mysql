<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add user</title>
    <style>
        table {
            width:80%;
        }

        table, tr, td, th {
            border-collapse: collapse;
            border : thin solid black; 
            text-align: center;           
        }
    </style>
</head>
<body>


    <table class="table table-striped table-primary">
        <thead>
          <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Employee Type</th>        
              <th>Hourly Rate</th>        
              <th>Total Hrs</th>              
          </tr>
        </thead>
       <tbody> 
  <% records.forEach((data) => {%>
      <tr>
          <td><%= data.name %></td>
          <td><%= data.email %></td>
          <td><%= data.type %></td> 
          <td><%= data.hours %></td>
          <td><%= data.rate %></td>            
      </tr>
  <% }); %>
       </tbody>
</table>


    <h1>Add new User</h1>
    <center>
        <form method="post" action="/">
            <input type="text" name="name" placeholder="Name"><br>
            <input type="email" name="email" placeholder="Email"><br>
            <select name="type">
                <option value="Hourly">Hourly</option>
                <option value="Fixed">Fixed</option>
            </select><br>
            <input type="number" name="hours" placeholder="No. of hrs"><br>
            <input type="number" name="rate" placeholder="Per Hr Rate"><br>
            <input type="submit" name="submit" value="Add New user">
        </form>

    </center>
</body>
</html>